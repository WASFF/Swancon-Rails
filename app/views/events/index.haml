%h1 Listing Events

%table
  %tr
    %th Name
    %th 
    %th
    %th

  - @events.each do |event|
    %tr
      %td= event.name
      %td= link_to "Show", event
      %td= link_to "Edit", edit_event_path(event)
      %td
        - if user_can? :delete, event
          = link_to "Delete", event, confirm: "Are you sure?", method: :delete

= link_to "Add New Event", new_event_path
