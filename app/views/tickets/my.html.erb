<% content_for :title do %>DoomCon 2012 - My Tickets<% end %>
<h2>My Tickets</h2>

<% @sets.each do |set| %>
<%= set.name %> Tickets (<%= set.tickets_for(current_user).count %>)
<table width="100%">
	<tr>
		<th>Purchaser</th>
		<th>Payment Verified</th>
		<th>Card Issued</th>		
		<th></th>
  </tr>
<% set.tickets_for(current_user).each do |ticket| %>
<%= render partial: "ticket", locals: {all: false, ticket: ticket} %>
<% end %>
</table>
<% end %>
