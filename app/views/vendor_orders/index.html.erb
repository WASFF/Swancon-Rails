<% @vendor_orders.each do |vendor_order| %>
  <tr>
    <td><%= vendor_order.vendor.name %></td>
    <td><%= render_time(vendor_order.created_at) %></td>
		<td><%= vendor_order.merchandise.count %></td>
    <td><%= link_to 'Show', vendor_order %></td>
    <td><%= link_to 'Edit', edit_vendor_order_path(vendor_order) %></td>
    <td><%= link_to 'Destroy', vendor_order, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

